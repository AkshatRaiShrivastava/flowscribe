rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /flowcharts/{docId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Allow creation and reading of shared analyses
    match /shared/{docId} {
      allow create: if request.auth != null;
      // Anyone can read shared analysis
      allow read: if true;
      // Allow updating only view count field
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewCount']);
    }
  }
}